{
    "manifest_version": 3,
    "name": "Lock-In Mode",
    "version": "1.0",
    "description": "Ban & pick websites and lock in a focus session (LoL-style).",
    "permissions": [
        "storage",
        "tabs",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Lock-In Mode"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "mission.html",
                "mission.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}